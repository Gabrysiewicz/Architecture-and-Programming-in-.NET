@model IEnumerable<Laboratorium7b.Models.Invoice>

@{
    ViewData["Title"] = "MyOrders";
}

<h1>MyOrders</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.InvoiceId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InvoiceDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BillingAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BillingCity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BillingState)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BillingCountry)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BillingPostalCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-action="Details" asp-route-id="@item.InvoiceId">
                    @Html.DisplayFor(modelItem => item.InvoiceId)
                </a>
            </td>
            <td>
                <!-- @Html.DisplayFor(modelItem => item.InvoiceDate) -->
                <span>@item.InvoiceDate.ToShortDateString()<span>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BillingAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BillingCity)
            </td>
            <td>
            @if (string.IsNullOrEmpty(item.BillingState))
            {
                <span>N/A</span>
            }
            else
            {
                @Html.DisplayFor(modelItem => item.BillingState)
            }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BillingCountry)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BillingPostalCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total) zl
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.InvoiceId">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
